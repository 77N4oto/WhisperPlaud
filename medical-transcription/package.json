{
    "name": "medical-transcription",
    "version": "0.1.0",
    "private": true,
    "main": "electron/main.js",
    "scripts": {
        "dev": "next dev --turbopack",
        "build": "next build --turbopack",
        "start": "next start",
        "lint": "eslint",
        "electron:dev": "electron .",
        "electron:build": "npm run build && electron-builder",
        "postinstall": "electron-builder install-app-deps"
    },
    "build": {
        "appId": "com.naoto.whisperplaud",
        "productName": "WhisperPlaud",
        "directories": {
            "output": "dist"
        },
        "files": [
            "electron/**/*",
            ".next/**/*",
            "node_modules/**/*",
            "package.json"
        ],
        "win": {
            "target": "nsis",
            "icon": "public/icon.ico"
        },
        "nsis": {
            "oneClick": false,
            "allowToChangeInstallationDirectory": true
        }
    },
    "dependencies": {
        "@aws-sdk/client-s3": "^3.873.0",
        "@aws-sdk/s3-request-presigner": "^3.873.0",
        "@prisma/client": "^6.14.0",
        "bcryptjs": "^3.0.2",
        "bullmq": "^5.58.0",
        "ioredis": "^5.7.0",
        "jsonwebtoken": "^9.0.2",
        "next": "15.5.0",
        "react": "19.1.0",
        "react-dom": "19.1.0"
    },
    "devDependencies": {
        "@eslint/eslintrc": "^3",
        "@tailwindcss/postcss": "^4",
        "@types/jsonwebtoken": "^9.0.6",
        "@types/node": "^20",
        "@types/react": "^19",
        "@types/react-dom": "^19",
        "dotenv": "^17.2.3",
        "electron": "^34.5.8",
        "electron-builder": "^25.1.8",
        "eslint": "^9",
        "eslint-config-next": "15.5.0",
        "prisma": "^6.14.0",
        "tailwindcss": "^4",
        "typescript": "^5"
    }
}
